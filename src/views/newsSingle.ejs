<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%- article.title.rendered %></title> 
    <meta name="description" content="<%- article.excerpt.rendered %>">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://ntvnews.herokuapp.com/">
    <meta property="og:title" content="<%- article.title.rendered %>">
    <meta property="og:description" content="<%- article.excerpt.rendered %>">
    <meta property="og:image" content="<%- media.guid.rendered %>">

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="https://ntvnews.herokuapp.com/">
    <meta property="twitter:title" content="<%- article.title.rendered %>">
    <meta property="twitter:description" content="<%- article.excerpt.rendered %>">
    <meta property="twitter:image" content="<%- media.guid.rendered %>"> 
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro&display=swap" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.0/moment.min.js"></script>
</head>
<body>
    <header class="header">
        <div class="header__logo">Node.Js News</div>
        <%- include('./partials/search.ejs') %>
    </header>

    <div class="wrapper">
        <div class="news-single">
                <a href="/">&larr;- Back </a>
                <% if(article != null) { %>
                    <h2><%- article.title.rendered %> &nbsp;<small id="<%- article.id %>"><%- article.date%></small></h2>
                    <img src="<%- media.guid.rendered %>" alt="<%- article.title.rendered %>">
                    <p><%- article.content.rendered %></p>
                <% } else { %>
                    No posts found.
                <% } %>
        </div>
    </div>  
    <script >
   
    

        function modify()
        {  var i=0;
              // Get a NodeList of all .demo elements
            const demoClasses = document.querySelectorAll('small');
            //alert(demoClasses.id);
            // Change the text of multiple elements with a loop
            demoClasses.forEach(element => {
              //element.textContent = 'All demo classes updated.';
              var date = $('#'+demoClasses[i].id).text();
              
    
              var dt = moment(date).format('DD-MM-YYYY h:m:s a');
              
              $('#'+demoClasses[i].id).html(dt);
    
              i++;
            });
            
        }
        setTimeout(modify, 3500);
        </script>
</body>
</html> 